<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DataGridView">
        <attr
            name="columnCount"
            format="integer" />

        <attr
            name="rowHeight"
            format="dimension" />

        <attr
            name="columnHeaderHeight"
            format="dimension" />

        <attr
            name="diviserSize"
            format="dimension" />

        <attr
            name="showVerticalSeparator"
            format="boolean" />

        <attr
            name="showHorizontalSeparator"
            format="boolean" />

        <attr
            name="columnHeaderBackgroundColor"
            format="color" />

        <attr
            name="columnHeaderTextColor"
            format="color" />

        <attr
            name="rowBackgroundColor"
            format="color" />

        <attr
            name="rowTextColor"
            format="color" />

        <attr
            name="diviserColor"
            format="color" />

        <attr
            name="diviserHeaderColor"
            format="color" />

        <attr
            name="hideHeader"
            format="boolean" />
    </declare-styleable>
</resources>
